<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Add new Comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 50px auto;">
        <form method="POST" action="/campgrounds/<%= campground._id %>/comments">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="text" name="comment[text]">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="author" name="comment[author]">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block btn btn-primary btn-large"">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go back to the campgrounds page</a>
    </div>
</div>

<%- include("../partials/footer") %>
